# .env.example - Vortex Board
# Copie este arquivo para .env e configure as variáveis

# === DJANGO BÁSICO ===
SECRET_KEY=django-insecure-CHANGE-ME-IN-PRODUCTION-PLEASE
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# === BANCO DE DADOS ===
# Opção 1: PostgreSQL individual
DB_NAME=vortex_board
DB_USER=vortex_user
DB_PASSWORD=vortex123
DB_HOST=localhost
DB_PORT=5432

# Opção 2: URL completa (prevalece sobre as opções individuais)
# DATABASE_URL=postgresql://vortex_user:vortex123@localhost:5432/vortex_board

# Usar SQLite em desenvolvimento (opcional)
USE_SQLITE=False

# === REDIS ===
REDIS_URL=redis://localhost:6379/0

# === EMAIL ===
# Desenvolvimento (console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@vortex.com.br

# Produção (SMTP)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu-email@gmail.com
# EMAIL_HOST_PASSWORD=sua-senha-app
# DEFAULT_FROM_EMAIL=vortex@vortex.com.br

# === AWS LIGHTSAIL (PRODUÇÃO) ===
AWS_LIGHTSAIL=False
LIGHTSAIL_HOST=
AWS_REGION=us-east-1

# === AWS S3 (OPCIONAL) ===
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# === MONITORAMENTO ===
# Sentry para error tracking
SENTRY_DSN=
ENVIRONMENT=development

# CloudWatch Logs
AWS_CLOUDWATCH_LOG_GROUP=

# === CONFIGURAÇÕES CUSTOMIZADAS ===
# Configurações específicas do Vortex Board
VORTEX_DEFAULT_WIP_LIMIT=3
VORTEX_SPRINT_DAYS=14
VORTEX_WS_HEARTBEAT_INTERVAL=30

# Auto-refresh para dashboards (segundos)
AUTO_REFRESH_INTERVAL=30000

# === DESENVOLVIMENTO ===
# Debug Toolbar
USE_DEBUG_TOOLBAR=True

# CORS (para frontend separado)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === CELERY (TAREFAS ASSÍNCRONAS) ===
# Broker URL (geralmente mesmo do Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === LOGS ===
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Arquivo de log personalizado
LOG_FILE=/var/log/vortex-board/vortex.log

# === DOCKER ===
# Configurações específicas para Docker
DOCKER_ENV=False

# === BACKUPS ===
# Diretório para backups automáticos
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30

# === LIMITES E PERFORMANCE ===
# Upload de arquivos
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760 # 10MB

# Timeout para requests
REQUEST_TIMEOUT=30

# === INTEGRAÇÃO EXTERNA ===
# Webhook para notificações
WEBHOOK_URL=
WEBHOOK_SECRET=

# Slack integration
SLACK_BOT_TOKEN=
SLACK_CHANNEL=

# === DESENVOLVIMENTO LOCAL ===
# Para usar com docker-compose
COMPOSE_PROJECT_NAME=vortex-board

# Portas customizadas
WEB_PORT=8000
DB_PORT=5432
REDIS_PORT=6379

# === OBSERVAÇÕES ===
# 1. Nunca commite este arquivo com valores reais
# 2. Em produção, use secrets/vault para valores sensíveis
# 3. Variáveis marcadas como obrigatórias devem ser definidas
# 4. Para AWS Lightsail, veja a documentação específica
# 5. Para desenvolvimento local, apenas DB e REDIS são obrigatórios